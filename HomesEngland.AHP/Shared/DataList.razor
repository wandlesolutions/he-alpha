<dl class="@Css">
    @ChildContent
</dl>

@code {
    [Parameter]
    public bool? DisableBorder { get; set; }

    [Parameter, EditorRequired]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public bool? Border { get; set; } = true;

    public string Css
    {
        get
        {
            if (Border.HasValue && Border.Value)
            {
                return "govuk-summary-list";
            }

            return "govuk-summary-list govuk-summary-list--no-border";
        }
    }
}
